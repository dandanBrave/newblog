<!DOCTYPE html>
<html>
<head>
    {{! Document Settings }}
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    {{! Page Meta }}
    <title>{{meta_title}}</title>
    <meta name="description" content="{{meta_description}}" />
    <meta name="keywords" content="{{meta_keywords}}">
    <meta name="google-site-verification" content="OnIw0M_9GbJjETSGfsugcHPg4yLFhDnMiI4gu-0YJ3U" />
    <meta name="baidu-site-verification" content="OPRni7k9YF" />
    <meta name="msvalidate.01" content="F02D68813AD393CFE9FC73C0555FF8AE" />

    <meta name="HandheldFriendly" content="True" />
    <meta name="viewport" content="width=device-width, minimum-scale=1, maximum-scale=1, user-scalable=no" />

    <link rel="shortcut icon" href="{{asset "images/favicon.ico"}}">
    <link rel="apple-touch-icon" href="{{asset "images/apple-touch-icon.png"}}">
    <link rel="apple-touch-icon" sizes="72x72" href="{{asset "images/apple-touch-icon-72x72.png"}}">
    <link rel="apple-touch-icon" sizes="114x114" href="{{asset "images/apple-touch-icon-114x114.png"}}">

    {{! Styles'n'Scripts }}
    <link rel="stylesheet" href="{{asset "css/bootstrap.min.css"}}">
    <link rel="stylesheet" href="{{asset "css/font-awesome.min.css"}}">

    <link rel="stylesheet" href="{{asset "css/screen.css"}}">
    <script>
    /*====================================================
      THEME SETTINGS & GLOBAL VARIABLES
    ====================================================*/
    //  Sidebar Position
    var sidebar_left = false; // Set true or flase for positioning sidebar on left

    </script>
    {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<body class="{{body_class}}">

    {{navigation}}

    <!-- start site's main content area -->
    <section class="content-wrap">
        <div class="container">
            <div class="row">
                <!-- start main post area -->
                <div class="col-md-8 main-content">
                    {{! Everything else gets inserted here }}
                    {{{body}}}
                </div>
                <!-- start sidebar -->
                <aside class="col-md-4 sidebar">
                    <!-- start widget -->
                    <div class="widget">
                        <h4 class="title">Recent Post</h4>
                        {{recent_posts}}
                    </div>
                    <!-- end widget -->
                    <!-- start tag cloud widget -->
                    <div class="widget">
                        <h4 class="title">Tags</h4>
                        {{!-- <div class="content tag-cloud"></div> --}}
                        {{tag_cloud limit=15}}
                    </div>
                    <!-- end tag cloud widget -->
                    <!-- start widget -->
                    <div class="widget">
                        <h4 class="title">Announcement</h4>
                        <div class="content">
                            Dear visitors, if you have any questions to discuss with me, just click the <a href="/contact">contact page</a> and send an email to me. I am very glad to hear from you.
                        </div>
                    </div>
                    <!-- end widget -->
                </aside>
                <!-- end sidebar -->
            </div>
        </div>

    </section>

    <!-- start main-footer -->
    <footer class="main-footer">
        <div class="container">
            <div class="row">
                <!-- start first footer widget area -->
                <div class="col-sm-4">
                    <!-- start widget -->
                    <div class="widget">
                        <h4 class="title">Recent Post</h4>
                        {{recent_posts}}
                    </div>
                    <!-- end widget -->
                </div>
                <!-- end first footer widget area -->
                <!-- start second footer widget area -->
                <div class="col-sm-4">
                    <!-- start tag cloud widget -->
                    <div class="widget">
                        <h4 class="title">Tags</h4>
                        {{tag_cloud limit=15}}
                    </div>
                    <!-- end tag cloud widget -->
                </div>
                <!-- end second footer widget area -->
                <!-- start third footer widget area -->
                <div class="col-sm-4">
                    <!-- start widget -->
                    <div class="widget">
                        <h4 class="title">Links</h4>
                        <div class="content tag-cloud">
                            <a href="http://www.smashingmagazine.com/" title="Smashing Magazine" target="_blank">Smashing Magazine</a>
                            <a href="http://tutsplus.com/" title="Tuts Plus" target="_blank">Tuts Plus</a>
                            <a href="http://www.nczonline.net/" title="NCZonline" target="_blank">NCZonline</a>
                            <a href="http://www.nczonline.net/" title="Html5rocks" target="_blank">Html5rocks</a>
                            <a href="https://css-tricks.com/" title="CSS Tricks" target="_blank">CSS Tricks</a>
                            <a href="http://webdesignerwall.com/" title="Web Designer Wall" target="_blank">Web Designer Wall</a>
                            <a href="http://blog.codepen.io/" title="Codepen" target="_blank">Codepen</a>
                            <a href="http://hakim.se/" title="Hakim" target="_blank">Hakim</a>
                            <a href="http://tutorialzine.com/" title="Tutorialzine" target="_blank">Tutorialzine</a>
                            <a href="http://dailyjs.com/" title="Dailyjs" target="_blank">Dailyjs</a>
                            <hr>
                            <a href="http://www.w3cplus.com/" title="W3Cplus" target="_blank">W3Cplus</a>
                            <a href="http://www.w3cfuns.com/" title="W3Cfuns" target="_blank">W3Cfuns</a>
                            <a href="http://www.alloyteam.com/" title="AlloyTeam" target="_blank">AlloyTeam</a>
                            <a href="http://segmentfault.com/blogs" title="Segmentfault" target="_blank">Segmentfault</a>
                            <a href="http://caibaojian.com/links" title="前端博客" target="_blank">前端博客</a>
                            <a href="http://www.zhangxinxu.com/wordpress/" title="鑫空间" target="_blank">鑫空间</a>
                        </div>
                    </div>
                    <!-- end widget -->
                </div>
                <!-- end third footer widget area -->
            </div>
        </div>
    </footer>
    <!-- end main-footer -->
    <!-- start copyright section -->
    <div class="copyright">
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    Copyright &copy; 2015, <a href="{{@blog.url}}">{{@blog.title}}</a>.  All Right Reserved
                </div>
            </div>
        </div>
    </div>
    <!-- end copyright section -->

    <!--back to top-->
    <a href="#" id="back-to-top" title="Back to Top"><i class="fa fa-angle-up"></i></a>
    <div id="setting_panel">
        <a href="" id="setting_panel_toggle"><i class="fa fa-tint"></i></a>
        <div id="picker_holder"></div>
        <a class="dp-button dfc-bt" id="default_color">Default Color</a>
        <a class="dp-button sb-bt" id="left_sb">Sidebar Left</a>
        <a class="dp-button sb-bt active" id="right_sb">Sidebar Right</a>
    </div>

    {{! Ghost outputs important scripts and data with this tag }}
    {{ghost_foot}}

    <script src="{{asset "js/bootstrap.min.js"}}"></script>
    <script src="{{asset "js/highlight.pack.js"}}"></script>
